{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "module": "es6",
    "target": "es5",
    "lib": [
      "es2019",
      "dom"
    ],
    "noEmit": false,
    "declaration": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
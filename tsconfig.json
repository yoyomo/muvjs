{
  "compilerOptions": {
    "sourceMap": true,
    "alwaysStrict": true,
    "strict": true,
    "module": "es6",
    "target": "es5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "noEmit": false,
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "types",
    "typeRoots": ["types"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}